// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int     @id @default(autoincrement()) @map("user_id")
  username String  @unique
  email    String  @unique
  password String
  boards   Board[]
}

model Board {
  boardId Int      @id @default(autoincrement()) @map("board_id")
  name    String
  userId  Int      @map("user_id")
  User    User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  columns Column[]
}

model Column {
  columnId Int    @id @default(autoincrement()) @map("column_id")
  name     String
  order    Int    @default(-1)
  color    String @default("#4a4e69")
  boardId  Int    @map("board_id")
  Board    Board  @relation(fields: [boardId], references: [boardId], onDelete: Cascade)
  tasks    Task[]
}

model Task {
  taskId      Int       @id @default(autoincrement()) @map("task_id")
  title       String
  description String
  order       Int       @default(-1)
  columnId    Int       @map("column_id")
  Column      Column    @relation(fields: [columnId], references: [columnId], onDelete: Cascade)
  subtasks    Subtask[]
}

model Subtask {
  subtaskId Int    @id @default(autoincrement()) @map("subtask_id")
  title     String
  order     Int    @default(-1)
  taskId    Int    @map("task_id")
  Task      Task   @relation(fields: [taskId], references: [taskId], onDelete: Cascade)
}
